<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="40dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sebastian"
        android:layout_marginBottom="35dp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/text1"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/childInf1"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/text2"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/childInf2"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/text3"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/childInf3"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/text4"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/childInf4"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"/>

    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        tools:context=".GridXMLActivity" >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginRight="15dp"
            app:srcCompat="@mipmap/favorite" />

        <TextView
            android:id="@+id/text5"
            android:textSize="18dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/childInf5"
            android:layout_gravity="center"/>
    </GridLayout>

    <TextView
        android:id="@+id/text6"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/childInf6"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/text7"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/childInf7"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"/>
</LinearLayout>