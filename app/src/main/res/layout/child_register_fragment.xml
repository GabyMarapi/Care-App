<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="40dp"
    android:paddingLeft="60dp"
    android:paddingRight="60dp"
    tools:context=".ui.childregister.ChildRegister"
    >

    <TextView
        android:id="@+id/textView"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titleRegisterChild"
        android:layout_marginBottom="35dp"
        android:gravity="center_horizontal" />


    <EditText
        android:id="@+id/idETextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nombres"
        android:layout_marginBottom="15dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/idETextAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Edad"
        android:layout_marginBottom="15dp"
        android:inputType="number" />
    <EditText
        android:id="@+id/idETextWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Peso"
        android:layout_marginBottom="15dp"

        android:inputType="numberDecimal" />
    <EditText
        android:id="@+id/idETextSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Talla"
        android:layout_marginBottom="15dp"
        android:inputType="numberDecimal" />
    <EditText
        android:id="@+id/idETextHemogl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Hemoglobina"
        android:layout_marginBottom="35dp"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/idRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/save"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idETextConfirmPassword"
        app:layout_constraintVertical_bias="0.085" />


</LinearLayout>